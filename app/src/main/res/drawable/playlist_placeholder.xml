<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ваш текущий shape -->
    <item>
        <shape
            android:shape="rectangle">
            <size
                android:width="312dp"
                android:height="312dp"/>
            <stroke
                android:color="#AEAFB4"
                android:width="1dp"
                android:dashWidth="16dp"
                android:dashGap="16dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Векторное изображение в центре -->
    <item android:drawable="@drawable/playlist_placeholder_image"
        android:gravity="center"
        android:width="80dp"
        android:height="80dp"/>
</layer-list>
