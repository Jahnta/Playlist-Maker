<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_regular</item>
    </style>

    <style name="header_back_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/arrow_back_regular_black</item>
        <item name="tint">?attr/text_color_primary</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_bigger</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">?attr/button_color_primary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textColor">?attr/on_button_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_regular</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingVertical">@dimen/padding_bigger</item>
    </style>

    <style name="setting_option_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="setting_option_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/button_color_secondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="search_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_regular</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="search_layout_icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_size_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">?attr/icon_color_primary</item>
    </style>

    <style name="search_layout_icons.start">
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
    </style>

    <style name="search_layout_icons.end">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="search_layout_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/text_color_searchHint</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>
</resources>