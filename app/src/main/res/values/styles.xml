<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">?attr/button_color_primary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">?attr/on_button_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/horizontal_primary_padding</item>
        <item name="android:paddingEnd">@dimen/horizontal_secondary_padding</item>
        <item name="android:paddingVertical">@dimen/vertical_primary_padding</item>
    </style>

    <style name="setting_option_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="setting_option_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_secondary_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/button_color_secondary</item>
    </style>
</resources>