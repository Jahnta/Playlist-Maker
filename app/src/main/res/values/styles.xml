<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="header_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="header_back_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/arrow_back_regular_black</item>
        <item name="tint">?attr/text_color_primary</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">?attr/button_color_primary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/on_button_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_21</item>
    </style>

    <style name="setting_option_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="setting_option_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_12</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/button_color_secondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="search_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="search_layout_icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_size_16</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">?attr/icon_color_primary</item>
    </style>

    <style name="search_layout_icons.start">
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
    </style>

    <style name="search_layout_icons.end">
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
    </style>

    <style name="search_layout_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/text_color_searchHint</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="track_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="track_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:maxWidth">250dp</item>
    </style>

    <style name="artist_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_color_secondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="track_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_color_secondary</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="button_refresh" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">?attr/button_color_other</item>
        <item name="android:textColor">?attr/on_button_color_other</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="placeholder_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">86dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="placeholder_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_history_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Theme.PlaylistMaker.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogText</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogText</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/text_color_primary</item>
    </style>

</resources>