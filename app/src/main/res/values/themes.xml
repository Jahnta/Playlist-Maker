<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background_color_primary">@color/YP_White</item>
        <item name="background_color_secondary">@color/YP_Blue</item>
        <item name="background_color_search">@color/YP_Light_Gray</item>
        <item name="text_color_primary">@color/YP_Black</item>
        <item name="text_color_secondary">@color/YP_Text_Gray</item>
        <item name="text_color_searchHint">@color/YP_Text_Gray</item>
        <item name="icon_color_primary">@color/YP_Text_Gray</item>
        <item name="button_color_primary">@color/YP_White</item>
        <item name="button_color_secondary">@color/YP_Text_Gray</item>
        <item name="on_button_color_primary">@color/YP_Black</item>
        <item name="colorControlActivated">@color/YP_Blue</item>
    </style>
</resources>