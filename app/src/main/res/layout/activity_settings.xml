<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color_primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow_back"
            app:tint="?attr/text_color_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_regular"
            android:text="@string/setting_text"
            android:textAllCaps="false"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/text_size_bigger" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout style="@style/settings_option">

            <TextView
                style="@style/setting_option_text"
                android:text="@string/darktheme_text" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_theme"
                style="@style/setting_option_button"
                android:layout_height="@dimen/text_size_bigger" />
        </LinearLayout>

        <LinearLayout style="@style/settings_option">

            <TextView
                style="@style/setting_option_text"
                android:text="@string/share_text" />

            <ImageView
                android:id="@+id/share_button"
                style="@style/setting_option_button"
                android:background="@drawable/share" />
        </LinearLayout>

        <LinearLayout style="@style/settings_option">

            <TextView
                style="@style/setting_option_text"
                android:text="@string/support_text" />

            <ImageView
                android:id="@+id/support_button"
                style="@style/setting_option_button"
                android:background="@drawable/support" />
        </LinearLayout>

        <LinearLayout style="@style/settings_option">

            <TextView
                style="@style/setting_option_text"
                android:text="@string/terms_text" />

            <ImageView
                android:id="@+id/license_button"
                style="@style/setting_option_button"
                android:background="@drawable/arrow_forward" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>